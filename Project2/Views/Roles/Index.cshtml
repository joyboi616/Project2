@model IEnumerable<Project2.Database.Role>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RolePosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoleNickName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecondEmail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RolePosition)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoleNickName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SecondEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RolesId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RolesId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RolesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
