@model IEnumerable<Project2.Database.Music>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FavArtistName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavSongName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavAlbumName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FavMusicVideoName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FavArtistName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavSongName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavAlbumName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FavMusicVideoName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FavArtistId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FavArtistId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FavArtistId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
